<!------------------------------------------------------------------------------------------------------------->
    <% if (message.length > 0) { %>
        <div class="alert alert-success col-sm-12" style="display: block; text-align: center; font-weight: bolder;"><%= message %></div>
    <% } %>

    <section>
        <div class="container">
            <div class="card" style="margin-top: 40px; margin-bottom: 40px;">
                <div class="card-header" style="background-color: wheat;font-weight: bolder">
                    SIGN UP    
                </div>
                <div class="card-body" style="padding: 37px 30px;">
                    <form method="POST" action="signupto">
                        <div class="row form-row" style="padding: 5px;">
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault01">First name</label>
                                <input type="text" class="form-control" id="validationDefault01" placeholder="First name" name="ifirstname" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault01">Middle name</label>
                                <input type="text" class="form-control" id="validationDefault01" placeholder="Middle name" name="imidname">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault02">Last name</label>
                                <input type="text" class="form-control" id="validationDefault02" placeholder="Last name" name="ilastname">
                            </div>
                        </div>
                        <div class="row form-row" style="padding: 5px;">
                            <div class="col-md-6 mb-3">
                                <label for="validationDefaultUsername">Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupPrepend2">@</span>
                                    </div>
                                    <input type="text" class="form-control" id="validationDefaultUsername" placeholder="Username" name="iusername" aria-describedby="inputGroupPrepend2" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="inputPassword4">Password</label>
                                <input type="password" class="form-control" id="inputPassword4" name="ipassword" placeholder="Password">
                              </div>
                        </div>
                        <div class="row form-row" style="padding: 5px;">
                            <div class="col-md-12 mb-3">
                                <label for="validationDefault03">Address</label>
                                <input type="text" class="form-control" id="validationDefault03" name="iaddress" placeholder="Address" required>
                            </div>
                        </div>
                        <div class="row form-row" style="padding: 5px;">
                            <div class="col-md-8 mb-3">
                                <label for="validationDefault03">E-Mail</label>
                                <input type="text" class="form-control" id="validationDefault03" name="iemail" placeholder="E-mail" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="validationDefault03">Mobile NO</label>
                                <input type="text" class="form-control" id="validationDefault03" name="imobno" placeholder="Mob NO" required>
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit form</button>
                    </form>
                </div>
            </div>
        </div>
    </section>


