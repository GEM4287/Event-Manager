  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="card" style="margin-top: 50px;opacity: 0.9; margin-bottom: 50px;">
          <div class="card-body">
            <div class="panel-body">
              <p style="text-align: center; font-size: xx-large; font-weight: bolder;">List of all Events Private and Public</p>
              <% if (message.length > 0) { %>
                <div class="alert alert-success col-sm-12" style="display: block;text-align: center;"><%= message %></div>
              <% } %>
              <% if(details.length) {%>
                <div class="container" id="viewmytable">
                  <table class="table table-bordered" style="border: 3px solid;margin-top: 20px;">
                    <thead>
                      <tr>
                        <th scope="col">Username</th>
                        <th scope="col">EventId</th>
                        <th scope="col">EventName</th>
                        <th scope="col">EventDate</th>
                        <th scope="col">EventType</th>
                        <th scope="col">EventVenue</th>
                        <th scope="col">Update Event</th>
                        <th scope="col">Delete Event</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i=0;i<details.length;i++) { %>
                        <tr>
                          <form method="POST">
                            <th scope="row"><%=details[i].username%></th>
                            <td><input style="width: 25px;border: 0px;" type="text" value="<%=details[i].idevent%>" name="idevent" readonly></td>
                            <td><%=details[i].eventname%></td>
                            <td><%=details[i].eventdate%></td>
                            <td><%=details[i].eventtype%></td>
                            <td><%=details[i].eventvenue%></td>
                            <td><button type="submit" formaction="/updateinto" class="btn btn-danger">Update</button></td>
                            <td><button type="submit" formaction="/deleteinto" class="btn btn-primary">Cancel</button></td>
                          </form>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              <% }  else { %>
                <p style="text-align: center;">No Events Found</p>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

