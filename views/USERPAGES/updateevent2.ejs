  <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card" style="margin-top: 50px;opacity: 0.9; margin-bottom: 50px;">
                <div class="card-header" style="background: wheat;">
                    <p style="text-align: center;font-weight: bolder;font-size: xx-large;">Update your event</p>
                </div>
                <div class="card-body">
                    <div class="panel-body">
                        <% if(view==1){ %>
                            <form method="POST" action="/updatefinallyprivate">
                                <div class="row form-row" style="padding: 5px;">
                                    <div class="col-md-2 mb-3">
                                        <label>ID Event</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].idevent %>" value="<%= details[0].idevent %>" name="iidevent" readonly>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label>Date of event</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventdate %>" value="<%= details[0].eventdate %>" name="idate" readonly>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label>Type of Event</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].typeofevent %>" value="<%= details[0].typeofevent %>" name="itypeofevent" readonly>
                                    </div>
                                </div>
                                <div class="row form-row" style="padding: 5px;">
                                    <div class="col-md-8 mb-3">
                                        <label>EMail</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventemail %>" name="iemail" >
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label>Mobile Number</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventmobno %>" name="imobno" >
                                    </div>
                                </div>
                                <div class="row form-row" style="padding: 5px;">
                                    <div class="col-md-3 mb-3">
                                        <label>Name of your event</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventname %>" name="ieventname" >
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label>Event Type</label>
                                        <select class="form-control" name="ieventtype">
                                            <option>Birthday Parties</option>
                                            <option>Wedding Function</option>
                                            <option>Anniversary Party</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label>Event Type</label>
                                        <select class="form-control" name="ieventvenue">
                                            <option selected>Choose any Venue....</option>
                                            <% if(typeof venue !=='undefined') { %>
                                                <% venue.forEach((user)=> { %>
                                                  <option><%=user.venuename%></option>
                                                <% }) %>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-md-2 mb-3">
                                        <label>People</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventpeople %>" name="inumber" >
                                    </div>
                                </div>
                                <div class="row form-row" style="padding: 5px;">
                                    <div class="col-md-4 mb-3">
                                        <label>Opt for Food</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventfood %>" name="ifood">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label>Opt for Music</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventmusic %>" name="imusic">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label>Opt for Dance</label>
                                        <input type="text" class="form-control" placeholder="<%= details[0].eventdance %>" name="idance">
                                    </div>
                                </div>
                                <div class="row form-row" style="padding: 5px;">
                                    <button type="submit" class="form-control btn btn-primary">Click here to update your event</button>
                                </div>
                            </form>
                        <% } %>
                        <% if(view==2){ %>
