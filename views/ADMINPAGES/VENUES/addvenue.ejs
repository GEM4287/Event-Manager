<% if (message.length > 0) { %>
    <div class="alert alert-success col-sm-12" style="display: block;text-align: center;font-weight: bolder;"><%= message %></div>
<% } %>

<section style="min-height: 444px;">

    <div class="container">
        <div class="card" style="margin: 40px;">
            <div class="card-header" style="background-color: wheat; margin: 0px;padding: 0px;">
              <p style="font-weight: bolder;font-size:larger;margin-top: 12px;margin-left: 20px;">Add Your Venue</p>
            </div>
            <div class="card-body">
                <form method="POST" action="/addvenue">
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-6 mb-3">
                            <label style="font-weight: 700;">Name of the Venue</label>
                            <input type="text" class="form-control" placeholder="Name" id="iname" name="iname" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label style="font-weight: 700;">Owner Name</label>
                            <input type="text" class="form-control" placeholder="Owner Name" id="iownername" name="iownername" required>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-9 mb-3">
                            <label style="font-weight: 700;">Address of the Venue</label>
                            <input type="text" class="form-control" placeholder="Address" id="iaddress" name="iaddress" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label style="font-weight: 700;">One day rent of the Venue</label>
                            <input type="text" class="form-control" placeholder="Rent" id="iprice" name="iprice" required>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="mb-3">
                            <button class="form-control" type="submit" style="font-weight: bolder; font-size: larger; background-color: wheat;">Click here to add your venue.</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

