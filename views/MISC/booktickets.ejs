<section>

    <div class="container">
        <div class="card" style="margin: 40px;">
            <div class="card-header" style="background-color: wheat; margin: 0px;padding: 0px;">
              <p style="font-weight: bolder;font-size:larger;margin-top: 12px;margin-left: 20px;">Book Your event</p>
            </div>
            <div class="card-body">
                <form method="POST" action="/booktickets" id="formfield">
                    <input type="text" name="idevent" value="<%=idevent%>" hidden>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-9 mb-3">
                            <label style="font-weight: 700;">Your Name</label>
                            <input type="text" class="form-control" placeholder="Enter your name" id="iname" name="iname" required>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label style="font-weight: 700;"></label>
                            <input type="text" class="form-control" value="<%= price[0].eventdate%>" id="idate" name="idate" readonly>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-4 mb-3">
                            <label style="font-weight: 700;">Mobile No.</label>
                            <input type="text" class="form-control" placeholder="Enter your Mob No" id="imobno" name="imobno" required>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label style="font-weight: 700;">E-Mail</label>
                            <input type="text" class="form-control" placeholder="Enter your mail id" id="iemail" name="iemail" required>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-12 mb-3">
                            <label style="font-weight: 700;">Address</label>
                            <input type="text" class="form-control" placeholder="Enter your Address" id="iaddress" name="iaddress" required>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="col-md-6 mb-3">
                            <label style="font-weight: 700;">No of Passes</label>
                            <input type="text" class="form-control" placeholder="Enter how many passes you need" id="inumber" name="inumber" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label style="font-weight: 700;">Price Per Pass</label>
                            <input type="text" class="form-control" id="ivalue" name="ivalue" value="<%=price[0].eventprice%>" readonly>
                        </div>
                    </div>
                    <div class="form-row row" style="padding-left: 20px; padding-right: 20px;">
                        <div class="mb-3">
                            <button type="button" name="btn" value="Submit" data-toggle="modal" data-target="#confirm-submit" id="myBtn">Click here to show your details.</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>
    
